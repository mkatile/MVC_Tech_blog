<article>  
  <h2>Edit Post</h2>
  <form class="edit-post-form">
    <div>
      <label for="post-title">Title</label>
      <input name="post-title" type="text" id="post-title" value="{{post.title}}" />      
    </div>
    <div>
      Posted by you on {{format_date post.created_at}}
      |
      {{post.comments.length}} {{format_plural "comment" post.comments.length}}
    </div>
    <div>
      <label for="post-text">Post</label>
      <textarea id="post-text" name="post-text">{{post.post_text}}</textarea>
    </div>
    <button type="submit">Save Changes</button>
    <button type="button" class="delete-post-btn">Delete Post</button>
  </form>
</article>

<script src="/public/script/edit-post.js"></script>
<script src="/public/script/delete-post.js"></script>
